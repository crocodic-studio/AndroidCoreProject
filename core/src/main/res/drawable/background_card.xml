        <shape android:shape="rectangle">
            <solid android:color="@color/text_hint" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
</ripple>